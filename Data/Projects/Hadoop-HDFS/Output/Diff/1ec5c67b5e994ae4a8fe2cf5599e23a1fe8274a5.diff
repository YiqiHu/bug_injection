+  private int tryToReadFromInputStream(final InputStream in, final byte[] buf,
+      final int off, final int len) throws IOException {
+    int bytesRead = 0;
+    while (bytesRead < len) {
+      int bytes = in.read(buf, off + bytesRead, len - bytesRead);
+      if (bytes == -1) {
+        if (bytesRead == 0) {
+          return -1;
+        } else {
+          break;
+        }
+      }
+      bytesRead += bytes;
+    }
+
+    return bytesRead;
+  }
