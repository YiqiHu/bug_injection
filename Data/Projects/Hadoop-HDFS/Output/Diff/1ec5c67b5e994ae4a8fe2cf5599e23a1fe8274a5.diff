+        break;
+
+      case Upload:
+        LOG.debug(
+            "Block[{}]: Buffer file {} exists close upload stream",
+            getIndex(), bufferFile);
+        break;
+
+      case Closed:
+        closeBlock();
+        break;
+
+      default:
+        // this state can never be reached, but checkstyle
+        // complains, so it is here.
+      }
+    }
