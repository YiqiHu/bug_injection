+        try {
+          if (LOG != null) {
+            LOG.debug("Shutdown {}", exe);
+          }
+          exe.shutdown();
+        } catch (Exception e) {
+          if (LOG != null && LOG.isDebugEnabled()) {
+            LOG.debug("Exception in shutdown {}", exe, e);
+          }
+        }
+      }
+    }
+  }
