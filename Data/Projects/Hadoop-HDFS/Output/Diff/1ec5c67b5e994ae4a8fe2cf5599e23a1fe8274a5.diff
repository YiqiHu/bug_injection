+  static void renameFolder(final OBSFileSystem owner, final String srcKey,
+      final String dstKey)
+      throws IOException {
+    long startTime = System.nanoTime();
+
+    List<KeyAndVersion> keysToDelete = new ArrayList<>();
+
+    createFakeDirectory(owner, dstKey);
