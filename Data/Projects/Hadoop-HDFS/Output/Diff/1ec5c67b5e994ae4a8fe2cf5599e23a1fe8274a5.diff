+    }
+
+    @Override
+    public boolean hasNext() throws IOException {
+      return statusIterator.hasNext();
+    }
+
+    @Override
+    public LocatedFileStatus next() throws IOException {
+      return OBSCommonUtils.toLocatedFileStatus(owner,
+          statusIterator.next());
+    }
+  }
+}
